 <% @product.reviews.each do |review| %>
  <div class="review">
    <div class="poster">
    	<% if review.user != nil %>

        <p><strong>Posted by:</strong> <%= review.user.name %> <i>on</i> <%= review.created_at %></p>
      <% end %>
    </div>
    <p class='comment'>
      <%= review.comment %><br>
    </p>
  </div>
  <% end %>