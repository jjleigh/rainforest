 <% @product.reviews.each do |review| %>
  <div class="review">
    <div class="poster">
    	<% if review.user != nil %>
       Posted by <%= review.user.email %> on <%= review.created_at %>
      <% end %>
    </div>
    <p class='comment'>
      <%= review.comment %><br>
    </p>
  </div>
  <% end %>